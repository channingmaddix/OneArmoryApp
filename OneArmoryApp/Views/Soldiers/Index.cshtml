@model IEnumerable<OneArmoryApp.Models.Soldier>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Paygrade
            </th>
            <th>
                Last Name
            </th>
            <th>
                First Name
            </th>
            <th>
                DoD ID
            </th>
            <th>
                Weapon Type
            </th>
            <th>
                Weapon Serial 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PaygradeNavigation.Paygrade1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoDid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weapon.Nomenclature)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weapon.Serial)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SoldierId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SoldierId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SoldierId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
